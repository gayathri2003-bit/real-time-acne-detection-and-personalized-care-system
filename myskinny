        // Page Navigation
        let currentPage = 'home';
        let webcamStream = null;
        let analysisInterval = null;

        // Language Functions
        function setLanguage(lang) {
            currentLanguage = lang;
            updatePageContent();
            hideLanguageSelector();
        }

        function showLanguageSelector() {
            document.getElementById('languageSelector').classList.remove('hidden');
        }

        function hideLanguageSelector() {
            document.getElementById('languageSelector').classList.add('hidden');
        }

        function updatePageContent() {
            const t = translations[currentLanguage];
            
            // Update brand name and tagline
            const brandElements = document.querySelectorAll('.text-2xl.font-bold');
            brandElements.forEach(el => {
                if (el.textContent.includes('MySkinny') || el.textContent.includes('मायस्किनी') || el.textContent.includes('மைஸ்கின்னி') || el.textContent.includes('మైస్కిన్నీ')) {
                    el.textContent = t.brandName;
                }
            });
            
            const taglineElements = document.querySelectorAll('.text-xs.text-gray-500');
            taglineElements.forEach(el => {
                if (el.textContent.includes('by Gayathri') || el.textContent.includes('गायत्री द्वारा') || el.textContent.includes('கயத்ரியால்') || el.textContent.includes('గాయత్రిచే')) {
                    el.textContent = t.tagline;
                }
            });
            
            // Update navigation
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => {
                const onclick = link.getAttribute('onclick');
                if (onclick && onclick.includes("showPage('home')")) link.textContent = t.home;
                if (onclick && onclick.includes("showPage('about')")) link.textContent = t.about;
                if (onclick && onclick.includes("showPage('services')")) link.textContent = t.services;
                if (onclick && onclick.includes("showPage('analysis')")) link.textContent = t.analysis;
            });
            
            // Update language button
            const langButton = document.querySelector('[onclick="showLanguageSelector()"]');
            if (langButton) langButton.textContent = t.language;
            
            // Update search placeholder
            document.getElementById('searchInput').placeholder = t.searchPlaceholder;
            
            // Update language selector
            const langTitle = document.querySelector('#languageSelector h2');
            if (langTitle) langTitle.textContent = t.chooseLanguage;
            const langDesc = document.querySelector('#languageSelector p');
            if (langDesc) langDesc.textContent = t.selectLanguage;
            const closeBtn = document.querySelector('#languageSelector .text-gray-500');
            if (closeBtn) closeBtn.textContent = t.close;
            
            // Update home page hero content
            const welcomeTitle = document.querySelector('h1 .bg-gradient-to-r.from-purple-600');
            if (welcomeTitle) welcomeTitle.textContent = 'Transform';
            const journeyTitle = document.querySelector('h1 .bg-gradient-to-r.from-rose-500');
            if (journeyTitle) journeyTitle.textContent = t.welcome.split(' ').slice(-2).join(' ');
            
            const subtitle = document.querySelector('.text-2xl.lg\\:text-3xl.mb-10');
            if (subtitle) subtitle.innerHTML = t.subtitle;
            
            // Update CTA buttons
            const startBtn = document.querySelector('.bg-gradient-to-r.from-purple-600.to-pink-600');
            if (startBtn) startBtn.textContent = t.startAnalysis;
            const howItWorksBtn = document.querySelector('.border-3.border-purple-600');
            if (howItWorksBtn) howItWorksBtn.textContent = t.howItWorks;
            
            // Update benefits section
            const benefits = document.querySelectorAll('.bg-white\\/60.backdrop-blur-sm');
            if (benefits.length >= 3) {
                const benefit1Title = benefits[0].querySelector('.text-xl.font-semibold');
                const benefit1Desc = benefits[0].querySelector('.text-gray-600');
                if (benefit1Title) benefit1Title.textContent = t.benefit1Title;
                if (benefit1Desc) benefit1Desc.textContent = t.benefit1Desc;
                
                const benefit2Title = benefits[1].querySelector('.text-xl.font-semibold');
                const benefit2Desc = benefits[1].querySelector('.text-gray-600');
                if (benefit2Title) benefit2Title.textContent = t.benefit2Title;
                if (benefit2Desc) benefit2Desc.textContent = t.benefit2Desc;
                
                const benefit3Title = benefits[2].querySelector('.text-xl.font-semibold');
                const benefit3Desc = benefits[2].querySelector('.text-gray-600');
                if (benefit3Title) benefit3Title.textContent = t.benefit3Title;
                if (benefit3Desc) benefit3Desc.textContent = t.benefit3Desc;
            }
            
            // Update stats section
            const statsTitle = document.querySelector('.text-4xl.font-bold.text-gray-900.mb-4');
            if (statsTitle && statsTitle.textContent.includes('Trusted')) {
                statsTitle.textContent = t.statsTitle;
            }
            const statsSubtitle = document.querySelector('.text-xl.text-gray-600');
            if (statsSubtitle && statsSubtitle.textContent.includes('revolution')) {
                statsSubtitle.textContent = t.statsSubtitle;
            }
            
            // Update stats cards
            const statsCards = document.querySelectorAll('.stats-card .text-gray-600');
            if (statsCards.length >= 4) {
                statsCards[0].textContent = t.analyses;
                statsCards[1].textContent = t.accuracy;
                statsCards[2].textContent = t.analysisTime;
                statsCards[3].textContent = t.userRating;
            }
            
            // Update chatbot
            const chatbotTitle = document.querySelector('#chatbot h3');
            if (chatbotTitle) chatbotTitle.textContent = t.chatbotTitle;
            const chatInput = document.getElementById('chatInput');
            if (chatInput) chatInput.placeholder = t.chatPlaceholder;
            
            // Update analysis page
            const analysisTitle = document.querySelector('#analysisPage h1');
            if (analysisTitle) analysisTitle.textContent = t.analysisTitle;
            const analysisSubtitle = document.querySelector('#analysisPage .text-xl.text-gray-600');
            if (analysisSubtitle) analysisSubtitle.textContent = t.analysisSubtitle;
            
            // Update camera permission section
            const permissionTitle = document.querySelector('#permissionGuide h3');
            if (permissionTitle) permissionTitle.textContent = t.cameraPermissionTitle;
            const permissionDesc = document.querySelector('#permissionGuide p');
            if (permissionDesc) permissionDesc.textContent = t.cameraPermissionDesc;
            
            const enableCameraBtn = document.querySelector('[onclick="requestCameraPermission()"]');
            if (enableCameraBtn) enableCameraBtn.textContent = t.enableCamera;
            const uploadBtn = document.querySelector('[onclick="showPhotoUpload()"]');
            if (uploadBtn) uploadBtn.textContent = t.uploadInstead;
            
            // Update footer
            const footerDesc = document.querySelector('footer p');
            if (footerDesc && footerDesc.textContent.includes('AI-powered')) {
                footerDesc.textContent = t.footerDesc;
            }
            
            const quickLinksTitle = document.querySelector('footer h3');
            if (quickLinksTitle && quickLinksTitle.textContent === 'Quick Links') {
                quickLinksTitle.textContent = t.quickLinks;
            }
            
            const footerSections = document.querySelectorAll('footer h3');
            footerSections.forEach(section => {
                if (section.textContent === 'Services') section.textContent = t.servicesFooter;
                if (section.textContent === 'Support') section.textContent = t.support;
            });
            
            // Update chatbot welcome message
            updateChatbotWelcome();
        }

        function updateChatbotWelcome() {
            const welcomeMessages = {
                en: "Hi! I'm your AI skincare assistant. How can I help you today?",
                hi: "नमस्ते! मैं आपका AI स्किनकेयर असिस्टेंट हूं। आज मैं आपकी कैसे मदद कर सकता हूं?",
                ta: "வணக்கம்! நான் உங்கள் AI சரும பராமரிப்பு உதவியாளர். இன்று நான் உங்களுக்கு எப்படி உதவ முடியும்?",
                te: "నమస్కారం! నేను మీ AI స్కిన్‌కేర్ అసిస్టెంట్. ఈరోజు నేను మీకు ఎలా సహాయం చేయగలను?",
                es: "¡Hola! Soy tu asistente de cuidado de la piel con IA. ¿Cómo puedo ayudarte hoy?",
                fr: "Salut! Je suis votre assistant IA pour les soins de la peau. Comment puis-je vous aider aujourd'hui?",
                de: "Hallo! Ich bin Ihr KI-Hautpflege-Assistent. Wie kann ich Ihnen heute helfen?",
                zh: "你好！我是您的AI护肤助手。今天我可以为您做些什么？"
            };
            
            const welcomeElement = document.getElementById('chatWelcome');
            if (welcomeElement) {
                welcomeElement.textContent = welcomeMessages[currentLanguage] || welcomeMessages.en;
            }
        }

        function showInstructions() {
            document.getElementById('instructionsModal').classList.remove('hidden');
        }

        function closeInstructions() {
            document.getElementById('instructionsModal').classList.add('hidden');
        }

        function showPage(pageName) {
            // Hide all pages
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            
            // Show selected page
            document.getElementById(pageName + 'Page').classList.add('active');
            
            // Update navigation
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
            });
            
            // Find and activate current nav link
            const activeLink = document.querySelector(`[onclick="showPage('${pageName}')"]`);
            if (activeLink) {
                activeLink.classList.add('active');
            }
            
            currentPage = pageName;
            
            // Stop webcam if leaving analysis page
            if (pageName !== 'analysis' && webcamStream) {
                stopWebcam();
            }
            
            // Scroll to top
            window.scrollTo(0, 0);
        }

        // Search functionality
        document.getElementById('searchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                const query = this.value.toLowerCase();
                if (query.includes('analysis') || query.includes('scan') || query.includes('camera')) {
                    showPage('analysis');
                } else if (query.includes('about') || query.includes('team')) {
                    showPage('about');
                } else if (query.includes('service') || query.includes('price')) {
                    showPage('services');
                } else if (query.includes('contact') || query.includes('support')) {
                    showPage('contact');
                } else {
                    alert(`Searching for: ${this.value}`);
                }
                this.value = '';
            }
        });

        // Camera Permission Functions
        async function requestCameraPermission() {
            try {
                // Update step 1 as in progress
                document.getElementById('step1').classList.add('completed');
                
                // Show loading state
                const button = document.querySelector('[onclick="requestCameraPermission()"]');
                const originalText = button.innerHTML;
                button.innerHTML = '🔄 Requesting Access...';
                button.disabled = true;
                
                const stream = await navigator.mediaDevices.getUserMedia({ 
                    video: { 
                        width: { ideal: 1280 },
                        height: { ideal: 720 },
                        facingMode: 'user'
                    } 
                });
                
                // Permission granted - update UI
                document.getElementById('step1').classList.add('completed');
                document.getElementById('step2').classList.add('completed');
                
                // Show success message
                const successDiv = document.createElement('div');
                successDiv.className = 'bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mt-4';
                successDiv.innerHTML = `
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        <span>✅ Camera access granted! Starting your skin analysis...</span>
                    </div>
                `;
                document.getElementById('permissionGuide').appendChild(successDiv);
                
                // Wait a moment to show success, then proceed
                setTimeout(() => {
                    // Hide permission guide and show analysis interface
                    document.getElementById('permissionGuide').classList.add('hidden');
                    document.getElementById('analysisInterface').classList.remove('hidden');
                    
                    // Start webcam
                    webcamStream = stream;
                    const video = document.getElementById('webcamVideo');
                    video.srcObject = stream;
                    
                    // Start quality assessment after video loads
                    video.addEventListener('loadedmetadata', () => {
                        setTimeout(() => {
                            startQualityAssessment();
                        }, 1000);
                    });
                }, 1500);
                
            } catch (error) {
                console.error('Camera permission denied:', error);
                
                // Reset button
                const button = document.querySelector('[onclick="requestCameraPermission()"]');
                button.innerHTML = 'Try Again - Enable Camera Access';
                button.disabled = false;
                
                // Show detailed error message with troubleshooting
                const errorDiv = document.createElement('div');
                errorDiv.className = 'bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mt-4';
                errorDiv.innerHTML = `
                    <div class="mb-3">
                        <div class="flex items-center mb-2">
                            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="font-semibold">Camera Access Needed</span>
                        </div>
                        <p class="text-sm mb-3">To analyze your skin, we need camera permission. Here's how to enable it:</p>
                        <div class="text-sm space-y-1 ml-4">
                            <p>• Look for a camera icon in your browser's address bar</p>
                            <p>• Click "Allow" when prompted for camera access</p>
                            <p>• If blocked, click the camera icon and select "Always allow"</p>
                            <p>• Refresh the page if needed</p>
                        </div>
                    </div>
                    <div class="flex space-x-2">
                        <button onclick="requestCameraPermission()" class="bg-red-600 text-white px-3 py-1 rounded text-sm hover:bg-red-700">
                            Try Again
                        </button>
                        <button onclick="showPhotoUpload()" class="bg-gray-600 text-white px-3 py-1 rounded text-sm hover:bg-gray-700">
                            Upload Photo Instead
                        </button>
                    </div>
                `;
                document.getElementById('permissionGuide').appendChild(errorDiv);
            }
        }

        function showPhotoUpload() {
            document.getElementById('permissionGuide').classList.add('hidden');
            document.getElementById('analysisInterface').classList.remove('hidden');
            document.getElementById('webcamAnalysis').classList.add('hidden');
            document.getElementById('photoAnalysis').classList.remove('hidden');
        }

        // Webcam Functions
        function startQualityAssessment() {
            document.getElementById('qualityIndicators').classList.remove('hidden');
            
            // Start with initial assessment
            let lightingGood = false;
            let positionGood = false;
            let clarityGood = false;
            let assessmentCount = 0;
            
            analysisInterval = setInterval(() => {
                assessmentCount++;
                
                // Gradually improve conditions to simulate real scanning
                if (assessmentCount > 2) lightingGood = Math.random() > 0.3;
                if (assessmentCount > 4) positionGood = Math.random() > 0.4;
                if (assessmentCount > 6) clarityGood = Math.random() > 0.2;
                
                // After 8 seconds, ensure all conditions are good for demo
                if (assessmentCount > 8) {
                    lightingGood = true;
                    positionGood = true;
                    clarityGood = true;
                }
                
                // Update status indicators with real-time feedback
                document.getElementById('lightingStatus').innerHTML = lightingGood ? 
                    '<span class="text-green-400">Lighting: Excellent ✓</span>' : 
                    '<span class="text-yellow-400">Lighting: Move to brighter area</span>';
                    
                document.getElementById('positionStatus').innerHTML = positionGood ? 
                    '<span class="text-green-400">Position: Perfect ✓</span>' : 
                    '<span class="text-yellow-400">Position: Center your face</span>';
                    
                document.getElementById('clarityStatus').innerHTML = clarityGood ? 
                    '<span class="text-green-400">Clarity: Sharp ✓</span>' : 
                    '<span class="text-yellow-400">Clarity: Hold still</span>';
                
                // Enable capture button when all conditions are good
                const captureBtn = document.getElementById('captureBtn');
                const statusText = document.getElementById('statusText');
                
                if (lightingGood && positionGood && clarityGood) {
                    captureBtn.disabled = false;
                    captureBtn.classList.remove('opacity-50', 'cursor-not-allowed');
                    captureBtn.classList.add('pulse-glow');
                    statusText.innerHTML = '✨ <strong>Perfect conditions detected!</strong> Ready to capture and analyze your skin.';
                    document.getElementById('step3').classList.add('completed');
                    
                    // Add visual feedback to face guide
                    const faceGuide = document.querySelector('.face-guide');
                    if (faceGuide) {
                        faceGuide.classList.remove('border-green-400');
                        faceGuide.classList.add('border-green-500', 'shadow-lg');
                        faceGuide.style.boxShadow = '0 0 20px rgba(34, 197, 94, 0.5)';
                    }
                } else {
                    captureBtn.disabled = true;
                    captureBtn.classList.add('opacity-50', 'cursor-not-allowed');
                    captureBtn.classList.remove('pulse-glow');
                    
                    // Provide specific guidance
                    let guidance = 'Optimizing scan conditions... ';
                    if (!lightingGood) guidance += 'Need better lighting. ';
                    if (!positionGood) guidance += 'Position face in center. ';
                    if (!clarityGood) guidance += 'Keep steady. ';
                    
                    statusText.textContent = guidance;
                }
                
                // Add scanning animation effect
                const overlay = document.getElementById('faceOverlay');
                if (overlay && (lightingGood || positionGood || clarityGood)) {
                    overlay.style.background = 'linear-gradient(45deg, transparent 40%, rgba(34, 197, 94, 0.1) 50%, transparent 60%)';
                    overlay.style.animation = 'scanning 2s infinite';
                }
            }, 1000);
            
            // Add scanning animation CSS
            const style = document.createElement('style');
            style.textContent = `
                @keyframes scanning {
                    0% { background-position: -100% 0; }
                    100% { background-position: 100% 0; }
                }
            `;
            document.head.appendChild(style);
        }

        function stopWebcam() {
            if (webcamStream) {
                webcamStream.getTracks().forEach(track => track.stop());
                webcamStream = null;
            }
            if (analysisInterval) {
                clearInterval(analysisInterval);
                analysisInterval = null;
            }
        }

        function captureWebcamPhoto() {
            const video = document.getElementById('webcamVideo');
            const canvas = document.getElementById('webcamCanvas');
            const ctx = canvas.getContext('2d');
            
            // Set canvas dimensions to match video
            canvas.width = video.videoWidth;
            canvas.height = video.videoHeight;
            
            // Draw the video frame to canvas
            ctx.drawImage(video, 0, 0);
            
            // Stop webcam
            stopWebcam();
            
            // Start analysis simulation
            simulateAnalysis('webcam');
        }

        // Photo Upload Functions
        document.getElementById('skinPhoto').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                // Check file size (10MB limit)
                if (file.size > 10 * 1024 * 1024) {
                    alert('File size too large. Please choose a file under 10MB.');
                    return;
                }
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.getElementById('photoPreview');
                    const previewImage = document.getElementById('previewImage');
                    previewImage.src = e.target.result;
                    preview.classList.remove('hidden');
                };
                reader.readAsDataURL(file);
            }
        });

        function analyzePhoto() {
            const fileInput = document.getElementById('skinPhoto');
            if (fileInput.files.length === 0) {
                alert('Please select a photo first!');
                return;
            }
            
            simulateAnalysis('photo');
        }

        // Analysis Simulation
        function simulateAnalysis(method) {
            // Show loading overlay
            const loadingOverlay = document.createElement('div');
            loadingOverlay.className = 'fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center';
            loadingOverlay.innerHTML = `
                <div class="bg-white p-8 rounded-2xl max-w-md w-full mx-4 text-center">
                    <div class="animate-spin rounded-full h-16 w-16 border-b-4 border-purple-600 mx-auto mb-6"></div>
                    <h3 class="text-xl font-bold text-gray-900 mb-2">Analyzing Your Skin</h3>
                    <p id="analysisStep" class="text-gray-600 mb-4">Initializing AI models...</p>
                    <div class="w-full bg-gray-200 rounded-full h-2">
                        <div id="progressBar" class="bg-purple-600 h-2 rounded-full transition-all duration-500" style="width: 0%"></div>
                    </div>
                </div>
            `;
            document.body.appendChild(loadingOverlay);
            
            // Simulate analysis steps
            const steps = [
                { text: 'Detecting facial features...', progress: 20 },
                { text: 'Analyzing skin texture and tone...', progress: 40 },
                { text: 'Measuring hydration and oil levels...', progress: 60 },
                { text: 'Identifying skin concerns...', progress: 80 },
                { text: 'Generating personalized recommendations...', progress: 100 }
            ];
            
            let currentStep = 0;
            const stepInterval = setInterval(() => {
                if (currentStep < steps.length) {
                    document.getElementById('analysisStep').textContent = steps[currentStep].text;
                    document.getElementById('progressBar').style.width = steps[currentStep].progress + '%';
                    currentStep++;
                } else {
                    clearInterval(stepInterval);
                    
                    // Remove loading overlay
                    document.body.removeChild(loadingOverlay);
                    
                    // Show results
                    showAnalysisResults(method);
                }
            }, 2000);
        }

        function showAnalysisResults(method) {
            const results = {
                skinType: 'Combination',
                concerns: ['Mild dehydration', 'Enlarged pores in T-zone', 'Uneven skin texture'],
                hydration: '68%',
                oiliness: 'Moderate (T-zone)',
                sensitivity: 'Low',
                skinAge: 'Early 20s',
                overallScore: '7.2/10',
                recommendations: [
                    'Use gentle, hydrating cleanser twice daily',
                    'Apply niacinamide serum for pore refinement',
                    'Moisturize with lightweight, non-comedogenic formula',
                    'Always use SPF 30+ during the day',
                    'Consider weekly exfoliation with BHA'
                ]
            };
            
            // Create results modal
            const resultsModal = document.createElement('div');
            resultsModal.className = 'fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4';
            resultsModal.innerHTML = `
                <div class="bg-white rounded-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
                    <div class="p-8">
                        <div class="text-center mb-8">
                            <div class="text-4xl mb-4">🎉</div>
                            <h2 class="text-3xl font-bold text-gray-900 mb-2">Analysis Complete!</h2>
                            <p class="text-gray-600">Here's your personalized skin assessment</p>
                        </div>
                        
                        <div class="grid md:grid-cols-2 gap-6 mb-8">
                            <div class="bg-gradient-to-br from-purple-50 to-blue-50 p-6 rounded-xl">
                                <h3 class="font-bold text-gray-900 mb-4">Skin Profile</h3>
                                <div class="space-y-2 text-sm">
                                    <div class="flex justify-between">
                                        <span class="text-gray-600">Skin Type:</span>
                                        <span class="font-medium">${results.skinType}</span>
                                    </div>
                                    <div class="flex justify-between">
                                        <span class="text-gray-600">Hydration:</span>
                                        <span class="font-medium">${results.hydration}</span>
                                    </div>
                                    <div class="flex justify-between">
                                        <span class="text-gray-600">Sensitivity:</span>
                                        <span class="font-medium">${results.sensitivity}</span>
                                    </div>
                                    <div class="flex justify-between">
                                        <span class="text-gray-600">Overall Score:</span>
                                        <span class="font-bold text-purple-600">${results.overallScore}</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="bg-gradient-to-br from-green-50 to-teal-50 p-6 rounded-xl">
                                <h3 class="font-bold text-gray-900 mb-4">Key Concerns</h3>
                                <ul class="space-y-2 text-sm">
                                    ${results.concerns.map(concern => `
                                        <li class="flex items-start">
                                            <span class="text-orange-500 mr-2 mt-1">•</span>
                                            <span>${concern}</span>
                                        </li>
                                    `).join('')}
                                </ul>
                            </div>
                        </div>
                        
                        <div class="mb-8">
                            <h3 class="font-bold text-gray-900 mb-4">Personalized Recommendations</h3>
                            <div class="bg-gray-50 p-6 rounded-xl">
                                <ul class="space-y-3">
                                    ${results.recommendations.map((rec, index) => `
                                        <li class="flex items-start">
                                            <span class="bg-purple-100 text-purple-600 rounded-full w-6 h-6 flex items-center justify-center text-xs font-bold mr-3 mt-0.5">${index + 1}</span>
                                            <span class="text-gray-700">${rec}</span>
                                        </li>
                                    `).join('')}
                                </ul>
                            </div>
                        </div>
                        
                        <div class="flex space-x-4">
                            <button onclick="closeResultsModal()" class="flex-1 bg-gray-200 text-gray-800 py-3 rounded-full hover:bg-gray-300 transition duration-300">
                                Close
                            </button>
                            <button onclick="createRoutine()" class="flex-1 bg-purple-600 text-white py-3 rounded-full hover:bg-purple-700 transition duration-300">
                                Create My Routine
                            </button>
                        </div>
                    </div>
                </div>
            `;
            
            document.body.appendChild(resultsModal);
            
            // Store results modal reference
            window.currentResultsModal = resultsModal;
        }

        function closeResultsModal() {
            if (window.currentResultsModal) {
                document.body.removeChild(window.currentResultsModal);
                window.currentResultsModal = null;
            }
        }

