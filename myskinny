                window.currentRoutineModal = null;
            }
        }
        
        function downloadRoutine() {
            // Simulate setting up reminders
            const successDiv = document.createElement('div');
            successDiv.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50';
            successDiv.innerHTML = `
                <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span>📱 Smart reminders activated! You'll get notifications for your routine.</span>
                </div>
            `;
            document.body.appendChild(successDiv);
            
            setTimeout(() => {
                document.body.removeChild(successDiv);
            }, 5000);
            
            closeRoutineModal();
        }

        // Contact Form
        function submitContactForm(event) {
            event.preventDefault();
            
            // Show success message
            const successDiv = document.createElement('div');
            successDiv.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50';
            successDiv.innerHTML = `
                <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span>Message sent successfully! We'll get back to you within 24 hours.</span>
                </div>
            `;
            document.body.appendChild(successDiv);
            
            // Remove success message after 5 seconds
            setTimeout(() => {
                document.body.removeChild(successDiv);
            }, 5000);
            
            // Reset form
            event.target.reset();
        }

        // FAQ Function
        function showFAQ() {
            alert('FAQ section coming soon! For now, please use our chatbot or contact form for any questions.');
        }

        // Chatbot Functions
        function toggleChatbot() {
            const chatbot = document.getElementById('chatbot');
            const toggle = document.getElementById('chatbotToggle');
            
            if (chatbot.classList.contains('hidden')) {
                chatbot.classList.remove('hidden');
                toggle.style.display = 'none';
            } else {
                chatbot.classList.add('hidden');
                toggle.style.display = 'block';
            }
        }

        function sendMessage() {
            const input = document.getElementById('chatInput');
            const messages = document.getElementById('chatMessages');
            const message = input.value.trim();
            
            if (message === '') return;
            
            // Add user message
            const userMsg = document.createElement('div');
            userMsg.className = 'bg-purple-100 p-3 rounded-lg mb-3 ml-8';
            userMsg.innerHTML = `<p class="text-sm">${message}</p>`;
            messages.appendChild(userMsg);
            
            // Add bot response
            setTimeout(() => {
                const botMsg = document.createElement('div');
                botMsg.className = 'bg-gray-100 p-3 rounded-lg mb-3';
                
                let response = getChatbotResponse(message, currentLanguage);
                
                botMsg.innerHTML = `<p class="text-sm">${response}</p>`;
                messages.appendChild(botMsg);
                messages.scrollTop = messages.scrollHeight;
            }, 1000);
            
            input.value = '';
            messages.scrollTop = messages.scrollHeight;
        }

        function getChatbotResponse(message, language) {
            const lowerMessage = message.toLowerCase();
            
            const responses = {
                en: {
                    camera: 'To use our camera analysis, please click "Enable Camera Access" on the Analysis page. Your browser will ask for permission - just click "Allow". Your privacy is protected - images are processed locally and never stored.',
                    routine: 'I recommend a gentle morning routine with cleanser, vitamin C serum, moisturizer, and SPF. For evening: cleanser, treatment serum, and night moisturizer. Would you like me to create a personalized routine based on your skin analysis?',
                    product: 'Based on your skin analysis, I can suggest products tailored to your specific needs. Have you completed your skin analysis yet? If not, visit our Analysis page to get started!',
