            // Add other languages with default English responses
            const langResponses = responses[language] || responses.en;
            
            if (lowerMessage.includes('camera') || lowerMessage.includes('permission') || 
                lowerMessage.includes('कैमरा') || lowerMessage.includes('கேமரா') || lowerMessage.includes('కెమెరా')) {
                return langResponses.camera;
            } else if (lowerMessage.includes('routine') || lowerMessage.includes('दिनचर्या') || 
                      lowerMessage.includes('வழக்கம்') || lowerMessage.includes('రొటీన్')) {
                return langResponses.routine;
            } else if (lowerMessage.includes('product') || lowerMessage.includes('उत्पाद') || 
                      lowerMessage.includes('தயாரிப்பு') || lowerMessage.includes('ఉత్పత్తి')) {
                return langResponses.product;
            } else if (lowerMessage.includes('acne') || lowerMessage.includes('breakout') || 
                      lowerMessage.includes('मुंहासे') || lowerMessage.includes('முகப்பரு') || lowerMessage.includes('మొటిమలు')) {
                return langResponses.acne;
            } else if (lowerMessage.includes('dry') || lowerMessage.includes('hydration') || 
                      lowerMessage.includes('शुष्क') || lowerMessage.includes('வறண்ட') || lowerMessage.includes('పొడి')) {
                return langResponses.dry;
            } else if (lowerMessage.includes('sensitive') || lowerMessage.includes('संवेदनशील') || 
                      lowerMessage.includes('உணர்திறன்') || lowerMessage.includes('సెన్సిటివ్')) {
                return langResponses.sensitive;
            } else {
                return langResponses.default;
            }
        }

        // Enter key for chat
        document.getElementById('chatInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });



        // Initialize the website properly
        window.addEventListener('DOMContentLoaded', function() {
            // Set initial active nav link
            const homeLink = document.querySelector('[onclick="showPage(\'home\')"]');
            if (homeLink) {
                homeLink.classList.add('active');
            }
            
            // Show home page by default
            showPage('home');
        });
    </script>
